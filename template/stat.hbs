<!DOCTYPE html>
<html>
  <head>
    <title>Statistics</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <style>.page{margin: 50px auto;width:750px}</style>
  </head>
  <body>
    <div class="page">
      <h1>Sampling Statistics</h1>
      <h2>Accelerometer</h2>
      <table class="pure-table pure-table-horizontal">
        <thead>
          <tr>
            <th>Mean</th>
            <th>Median</th>
            <th>Mode</th>
            <th>Variance</th>
            <th>Standard deviation</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{stat.accelerometer.mean}}</td>
            <td>{{stat.accelerometer.median}}</td>
            <td>{{stat.accelerometer.mode}}</td>
            <td>{{stat.accelerometer.variance}}</td>
            <td>{{stat.accelerometer.stdev}}</td>
          </tr>
        </tbody>
      </table>
      <h3>Percentiles</h3>
      {{table stat.accelerometer.percentiles}}
      <h2>Gyroscope</h2>
      <table class="pure-table pure-table-horizontal">
        <thead>
          <tr>
            <th>Mean</th>
            <th>Median</th>
            <th>Mode</th>
            <th>Variance</th>
            <th>Standard deviation</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{stat.gyroscope.mean}}</td>
            <td>{{stat.gyroscope.median}}</td>
            <td>{{stat.gyroscope.mode}}</td>
            <td>{{stat.gyroscope.variance}}</td>
            <td>{{stat.gyroscope.stdev}}</td>
          </tr>
        </tbody>
      </table>
      <h3>Percentiles</h3>
      {{table stat.gyroscope.percentiles}}
      <h2>Heart Rate Monitor</h2>
      <table class="pure-table pure-table-horizontal">
        <thead>
          <tr>
            <th>Mean</th>
            <th>Median</th>
            <th>Mode</th>
            <th>Variance</th>
            <th>Standard deviation</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{stat.hrm.mean}}</td>
            <td>{{stat.hrm.median}}</td>
            <td>{{stat.hrm.mode}}</td>
            <td>{{stat.hrm.variance}}</td>
            <td>{{stat.hrm.stdev}}</td>
          </tr>
        </tbody>
      </table>
      <h3>Percentiles</h3>
      {{table stat.hrm.percentiles}}
    </div>
  </body>
</html>
